@model JobTracks.Areas.Admin.Data.Job_Master

@{
    ViewBag.Title = "Delete Assigned Work";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<h2 class="text-danger">Delete Assigned Work</h2>
<h5 class="mb-4">Are you sure you want to delete this assigned job?</h5>

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <label class="form-label fw-bold">Title</label>
        <div class="form-control-plaintext">@Model.Title</div>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Description</label>
        <div class="form-control-plaintext">@Model.Description</div>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Tech Stack</label>
        <div class="form-control-plaintext">@Model.Tech_Stack</div>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Status</label>
        <div class="form-control-plaintext">@Model.status</div>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Company</label>
        <div class="form-control-plaintext">@Model.Company_Master.Company_Name</div>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Team Leader</label>
        <div class="form-control-plaintext">@Model.User1.Username</div>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Recruiter</label>
        <div class="form-control-plaintext">@Model.User.Username</div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex gap-2">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Company", "Admin", null, new { @class = "btn btn-outline-secondary" })
    </div>
}
